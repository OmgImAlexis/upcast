{
    "name": "upcast",
    "version": "0.0.2",

    "description": "Upcast is a low-level JavaScript type checking and casting library",
    "keywords": [ "cast", "check", "type", "types" ],
    "author": "Rowan Manning (http://rowanmanning.co.uk/)",

    "repository": {
        "type": "git",
        "url": "https://github.com/rowanmanning/upcast.git"
    },
    "homepage": "https://github.com/rowanmanning/upcast",
    "bugs": "https://github.com/rowanmanning/upcast/issues",

    "engines": {
        "node": ">=0.6.0"
    },
    "devDependencies": {
        "browserify": "~2.2",
        "chai": "~1.4",
        "express": "~3.1",
        "glob": "~3.1",
        "jshint": "~1.0",
        "mocha": "~1.8",
        "sinon": "~1.5",
        "supervisor": "~0.5"
    },

    "main": "./lib/upcast.js",
    "scripts": {
        "lint": "echo \"$(./node_modules/.bin/jshint --config ./test/config/jshint.json ./lib ./test/unit)\"",
        "test": "./node_modules/.bin/mocha --ui tdd --reporter spec --colors --recursive ./test/unit",
        "testapp": "./node_modules/.bin/supervisor -q ./test/runner/boot.js"
    }
}